<% layout('layout/boilerplate') %>
<div class="row">
    
    <div class="col-6 offset-3">
        <h1 class="text-center">New Campground</h1>
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="">Title</label>
                <!-- <input class="form-control" type="text" id="title" name="campForm[title]" required> -->
                <input class="form-control" type="text" id="title" name="campForm[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Localtion</label>
                <input class="form-control" type="text" id="location" name="campForm[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Image</label>
                <input class="form-control" type="text" id="location" name="campForm[img]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Description</label>
                <textarea class="form-control" type="text" id="description" name="campForm[description]" required></textarea>
            </div>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text">$</div>
                </div>
                <input type="text" class="form-control" id="price" placeholder="price" name="campForm[price]" required>
            </div>

            <div class="mb-3">
                <button class="btn-success">Add campground</button>
            </div>
            
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
